<Page x:Class="Restoran.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restoran"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница входа">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="16" Text="Логин:"/>
            <TextBox Margin="10" Name="TBvLog" Height="20" Width="100"/>
            <TextBlock FontSize="16" Text="Пароль:"/>
            <TextBox Margin="10" Name="TBvPass" Height="20" Width="100"/>
            <Button Content="Войти" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
